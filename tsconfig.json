{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "removeComments": false,
        "rootDir": "src",
        "outDir": "dist"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "!typings/browser.d.ts",
        "!typings/main/**",
        "!typings/browser/**"
    ],
    "files": [
        "src/Cli.ts",
        "src/CompilableContent.ts",
        "src/Component.ts",
        "src/ComponentList.ts",
        "src/ComponentWriter.ts",
        "src/Config.ts",
        "src/ContentStructureWriter.ts",
        "src/Doc.ts",
        "src/HandlebarsRenderer.ts",
        "src/lib/RemarkableStylegen.ts",
        "src/Logger.ts",
        "src/MarkdownRenderer.ts",
        "src/Node.ts",
        "src/Page.ts",
        "src/PageLayout.ts",
        "src/Partial.ts",
        "src/PlainComponentList.ts",
        "src/Renderer.ts",
        "src/State.ts",
        "src/StructureReader.ts",
        "src/StructureWriter.ts",
        "src/Styleguide.ts",
        "src/View.ts",
        "typings/main.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
